        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/setting_pass_baru"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginTop="280dp"
